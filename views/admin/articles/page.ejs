<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/homenavbar.ejs") %>
<body>
    <hr>
    <div class="container">  
        <br>
        <% result.articles.rows.forEach(article => { %>
            <br>
            <div class="card">
                <div class="card-header">
                    <h3><%= article.title %></h3>
                </div>
                <div class="card-body">
                    <a href="<%= article.slug %>" class="btn btn-success">Read</a>
                </div>
            </div>
        <% }) %>
        <br>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) { %>
                    <a  href="/articles/page/<%= result.page -1  %>"> back </a>

                <% } else if(result.page == 2) {%>               
                    <a  href="/">back</a>
                <% } %>


                <% if(result.next) { %>
                    <a style="float:right" href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                <% } %>
                
                
            </div>

        </div>
    </div>
    <hr>
   




</body>

